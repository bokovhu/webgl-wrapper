{
    "compilerOptions": {
        "outDir": "./lib/",
        "declarationDir": "./types/",
        "declaration": true,
        "sourceMap": true,

        "module": "es6",
        "target": "ES5",
        "moduleResolution": "node",

        "allowJs": true,
        "noImplicitAny": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true
    },
    "exclude": ["./node_modules/"],
    "include": ["./src/**/*.ts"]
}
